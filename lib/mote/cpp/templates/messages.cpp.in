static ostfriesentee::Infusion awapCommonInfusion{nullptr};
void MessageFactory::setAwapCommonInfusion(ostfriesentee::Infusion& inf) {
	awapCommonInfusion = inf;
	dj_mem_addSafePointer((void**)&awapCommonInfusion);
}

