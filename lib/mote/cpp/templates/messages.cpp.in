	if(check(this->getSize() <= output.length, Warning::MessageParserOutputTooSmall)) {
		%% if msg.fields|length > 0
		auto java_data = static_cast<const JavaClass::UnderlyingType*>(REF_TO_VOIDP(java_msg));
		%% endif
